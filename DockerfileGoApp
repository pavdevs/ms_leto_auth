# Используй официальный образ Go как базовый
FROM golang:1.21-alpine as builder

# Установи рабочую директорию внутри контейнера
WORKDIR /app

# Скопируй исходный код в контейнер
COPY . .

# Скомпилируй приложение, указывая путь к файлу main.go относительно WORKDIR
RUN go build -o myapp ./cmd

# Используй alpine образ для минималистичного окружения
FROM alpine:latest  
RUN apk --no-cache add ca-certificates

WORKDIR /root/

COPY --from=builder /app/myapp .

EXPOSE 8080

CMD ["./myapp"]